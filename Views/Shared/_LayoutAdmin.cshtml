<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Basic Form</title>

    <link href="~/Content/backend/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/backend/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/backend/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/Content/backend/css/animate.css" rel="stylesheet">
    <link href="~/Content/backend/css/style.css" rel="stylesheet">

    <link href="~/Content/backend/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    @RenderSection("scripts", required: false)
</head>
<style>
    th,td{
        text-align:center;
    }
</style>
@{ var customer = Session["customer"] as  PTUDTMDT.Models.customer;}
<body>

<div id="wrapper">

    <nav class="navbar-default navbar-static-side" role="navigation">
        <div class="sidebar-collapse">
            <ul class="nav metismenu" id="side-menu">
                <li class="nav-header">
                    <div class="dropdown profile-element">
                        <span>
                            <img alt="image" class="img-circle" style="width:60px;" src="~/Content/frontend/img/admin.png" />
                        </span>
                       
                    </div>
                    <div class="logo-element">
                        IN+
                    </div>
                </li>

                <li>
                    <a href="@Url.Action("ThongKe","Admin")"><i class="fa fa-flask"></i> <span class="nav-label">Thống kê - Báo cáo</span></a>
                </li>

                <li>
                    <a href="#"><i class="fa fa-shopping-cart"></i> <span class="nav-label">Quản lý danh mục</span><span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level collapse">
                        <li><a href="@Url.Action("Index","categories")">Danh sách danh mục</a></li>
                        <li><a href="@Url.Action("Create","categories")">Thêm danh mục</a></li>
                    </ul>
                </li>

                <li>
                    <a href="#"><i class="fa fa-shopping-cart"></i> <span class="nav-label">Quản lý sản phẩm</span><span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level collapse">
                        <li><a href="@Url.Action("DanhSach","products")">Danh sách sản phẩm</a></li>
                        <li><a href="@Url.Action("Create","products")">Thêm sản phẩm</a></li>
                    </ul>
                </li>

                <li>
                    <a href="#"><i class="fa fa-shopping-cart"></i> <span class="nav-label">Quản lý khách hàng</span><span class="fa arrow"></span></a>
                    <ul class="nav nav-second-level collapse">
                        <li><a href="@Url.Action("Index","customers")">Danh sách khách hàng</a></li>
                        <li><a href="@Url.Action("Create","customers")">Thêm khách hàng</a></li>
                    </ul>
                </li>

            </ul>

        </div>
    </nav>



    <div id="page-wrapper" class="gray-bg">
        <div class="row border-bottom">
            <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                    <form role="search" class="navbar-form-custom" action="search_results.html">
                        <div class="form-group">
                        </div>
                    </form>
                </div>

                <ul class="nav navbar-top-links navbar-right">
                    <li>
                        <span class="m-r-sm text-muted welcome-message"></span>
                    </li>

                    @if (customer == null)
                    {
                <li>
                    <a href="@Url.Action("DangNhap","Admin")" class="nav-item nav-link">Đăng nhập</a>
                </li>
                <li>
                    <a href="@Url.Action("DangKy","Admin")" class="nav-item nav-link">Đăng ký</a>
                </li>
}   
                    else
                    {
                    <li>
                        <a href="#" class="nav-item nav-link">Xin chào : @customer.first_name</a>
                    </li>
                    <li>
                        <a href="@Url.Action("DangXuat", "Admin")">
                            <i class="fa fa-sign-out"></i> Đăng xuất
                        </a>
                    </li>
                                                              }

                </ul>

            </nav>
        </div>


        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
                <li>
                    <a href="#" class="changeStatusAll" data-field="publish" data-model="Language" data-value="1">Config option 1</a>
                </li>
                <li>
                    <a href=" #" class="changeStatusAll" data-field="publish" data-model="Language" data-value="0">Config option 2</a>
                </li>
            </ul>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>



        <div class="wrapper wrapper-content">
            @RenderBody()
        </div>
                        </div>
                    </div>

    <!-- Mainly scripts -->
    <script src="~/Content/backend/js/jquery-3.1.1.min.js"></script>
    <script src="~/Content/backend/js/bootstrap.min.js"></script>
    <script src="~/Content/backend/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Content/backend/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/Content/backend/js/inspinia.js"></script>
    <script src="~/Content/backend/js/plugins/pace/pace.min.js"></script>

    <!-- iCheck -->
    <script src="~/Content/backend/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>
