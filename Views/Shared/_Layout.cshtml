
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Mobile</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">
    @RenderSection("scripts", required: false)
    <!-- Favicon -->
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="~/Content/backend/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">


    <!-- Libraries Stylesheet -->
    @Styles.Render("~/Content/frontend/lib/owlcarousel/assets/owl.carousel.min.css")

    <!-- Customized Bootstrap Stylesheet -->
    @Styles.Render("~/Content/frontend/css/style.css")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">


</head>
<style>
    .pagination > .active > a, .pagination > .active > a:focus, .pagination > .active > a:hover, .pagination > .active > span, .pagination > .active > span:focus, .pagination > .active > span:hover {
        z-index: 3;
        color: #fff;
        cursor: default;
        background-color: #d19c97;
        border-color: #337ab7;
    }
    footer {
        text-align: center;
        background-color: #d19c97;
        height:100px;
        padding:45px;
    }

</style>
<body>
    <!-- Topbar Start -->
    <div class="container-fluid">

        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a href="" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold">
                        <span class="text-primary font-weight-bold border px-3 mr-1">E</span>
                        Mobile
                    </h1>
                </a>
            </div>
            <div class="col-lg-6 col-6 text-left">
                <form action="">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Tìm kiếm ">
                        <div class="input-group-append">
                            <span class="input-group-text bg-transparent text-primary">
                                <i class="fa fa-search"></i>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-3 col-6 text-right">
                <a href="" class="btn border">
                    <i class="fas fa-heart text-primary"></i>
                    <span class="badge">0</span>
                </a>
                <a href="" class="btn border">
                    <i class="fas fa-shopping-cart text-primary"></i>
                    <span class="badge">0</span>
                </a>
            </div>
        </div>
    </div>
    @{ var customer = Session["customer"] as  PTUDTMDT.Models.customer;}
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid mb-5">
        <div class="row border-top px-xl-5">

            @{Html.RenderAction("Menu2", "categories");}


            <div class="col-lg-9">

                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">

                            <a href="@Url.Action("Index","products")" class="nav-item nav-link ">Trang chủ</a>
                            <a href="@Url.Action("getBestSellingProducts","products")" class="nav-item nav-link">Sản phẩm bán chạy</a>
                            @if (customer != null)
                            {
                                <a href="@Url.Action("Index","carts")" class="nav-item nav-link">Giỏ hàng</a>
                                <a href="@Url.Action("ShowOrder","carts")" class="nav-item nav-link">Xem đơn hàng</a>
                            }
                        </div>
                        <div class="navbar-nav ml-auto py-0">
                            @if (customer == null)
                            {
                                <a href="@Url.Action("DangNhap","Home")" class="nav-item nav-link">Đăng nhập</a>
                                <a href="@Url.Action("DangKy","Home")" class="nav-item nav-link">Đăng ký</a>
                            }
                            else
                            {
                                <a href="#" class="nav-item nav-link">Xin chào : @customer.first_name</a>
                                <a href="@Url.Action("DangXuat","Home")" class="nav-item nav-link">Đăng xuất</a>
                            }
                        </div>
                    </div>
                </nav>

                @RenderBody();
            </div>

        </div>
    </div>



    <footer>
        <h3>Trường đại học Công Nghiệp Hà Nội - Năm 2024</h3>
    </footer>

    <!-- JavaScript Libraries -->

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/Content/frontend/lib/easing/easing.min.js")

    @Scripts.Render("~/Content/frontend/lib/owlcarousel/owl.carousel.min.js")


    @Scripts.Render("~/Content/frontend/mail/jqBootstrapValidation.min.js")
    @Scripts.Render("~/Content/frontend/mail/contact.js")


    @Scripts.Render("~/Content/frontend/js/main.js")

</body>

</html>
