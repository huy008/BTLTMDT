@model PTUDTMDT.Models.shipment

@{
    ViewBag.Title = "AddShipment";
}


@{ var customer = Session["customer"] as  PTUDTMDT.Models.customer;}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2>Nhâp thông tin giao hàng</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Ngày giao</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.shipment_date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.shipment_date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Thành phố</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Quốc gia</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.country, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.country, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Zip Code</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.zip_code, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.zip_code, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <input value="@customer.customer_id" type="hidden" name="customer_id" />
    </div>
    <div class="form-group">
        <input value="1" type="hidden" name="status" />
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Đặt hàng" class="btn btn-primary" />
        </div>
    </div>
</div>
}

